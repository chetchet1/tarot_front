# Auto detect text files and perform LF normalization
* text=auto

# Android Studio / IntelliJ IDEA files
*.xml text eol=lf
*.gradle text eol=lf
*.properties text eol=lf
*.pro text eol=lf

# Java source files
*.java text eol=lf

# Web files
*.js text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.vue text eol=lf
*.json text eol=lf
*.html text eol=lf
*.css text eol=lf

# Shell scripts
*.sh text eol=lf

# Windows scripts
*.bat text eol=crlf
*.cmd text eol=crlf

# Binary files
*.apk binary
*.aar binary
*.jar binary
*.so binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.webp binary