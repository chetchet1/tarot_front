{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["app/*"],
      "~/*": ["app/*"]
    },
    "types": [
      "@nativescript/types",
      "@types/node"
    ]
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "platforms"
  ]
}
